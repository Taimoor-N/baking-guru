<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".fragments.RecipeDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_recipe_detail_ingredients_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_detail_ingredients_heading"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextDark"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_recipe_detail_ingredients_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_recipe_detail_ingredients"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"/>

        <TextView
            android:id="@+id/tv_recipe_detail_preparation_steps_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/recipe_detail_preparation_steps_heading"
            android:textSize="32sp"
            android:textColor="@color/colorTextDark"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_steps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>